{
    "name": "cline/sequencer",
    "description": "Sequential migration and operation orchestration for Laravel",
    "license": "MIT",
    "keywords": [
        "php"
    ],
    "authors": [
        {
            "name": "Brian Faust",
            "email": "brian@cline.sh"
        }
    ],
    "require": {
        "php": "^8.4.0"
    },
    "require-dev": {
        "cline/php-cs-fixer": "^1.2.1",
        "driftingly/rector-laravel": "^2.1.3",
        "ergebnis/composer-normalize": "^2.49@dev",
        "laravel/pint": "^1.25.1",
        "laravel/pulse": "^1.4.3",
        "laravel/telescope": "^5.15",
        "orchestra/testbench": "^10.7",
        "pestphp/pest": "^3.8.4",
        "pestphp/pest-plugin-drift": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.2",
        "pestphp/pest-plugin-type-coverage": "^3.6.1",
        "phpstan/phpstan": "^2.1.32",
        "rector/rector": "^2.2.8",
        "symfony/var-dumper": "^7.3.5"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Cline\\Sequencer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Database\\Factories\\": "database/factories/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "vendor/bin/php-cs-fixer fix",
        "refactor": "rector",
        "test": "@test:morphs",
        "test:lint": "vendor/bin/php-cs-fixer check --diff",
        "test:morphs": [
            "@test:lint",
            "@test:type-coverage",
            "@test:unit",
            "@test:types",
            "@test:refactor"
        ],
        "test:numeric": [
            "@test:lint",
            "@test:type-coverage:numeric",
            "@test:unit:numeric",
            "@test:types",
            "@test:refactor"
        ],
        "test:refactor": "rector --dry-run",
        "test:type-coverage": "vendor/bin/pest --parallel --min=80 --type-coverage --configuration=phpunit.morphs.xml",
        "test:type-coverage:numeric": "vendor/bin/pest --parallel --min=80 --type-coverage --configuration=phpunit.numeric.xml",
        "test:type-coverage:ulid": "vendor/bin/pest --parallel --min=80 --type-coverage --configuration=phpunit.ulid.xml",
        "test:type-coverage:uuid": "vendor/bin/pest --parallel --min=80 --type-coverage --configuration=phpunit.uuid.xml",
        "test:types": "phpstan",
        "test:ulid": [
            "@test:lint",
            "@test:type-coverage:ulid",
            "@test:unit:ulid",
            "@test:types",
            "@test:refactor"
        ],
        "test:unit": "pest --parallel --min=80 --coverage --configuration=phpunit.morphs.xml",
        "test:unit:numeric": "pest --parallel --min=80 --coverage --configuration=phpunit.numeric.xml",
        "test:unit:ulid": "pest --parallel --min=80 --coverage --configuration=phpunit.ulid.xml",
        "test:unit:uuid": "pest --parallel --min=80 --coverage --configuration=phpunit.uuid.xml",
        "test:uuid": [
            "@test:lint",
            "@test:type-coverage:uuid",
            "@test:unit:uuid",
            "@test:types",
            "@test:refactor"
        ]
    }
}
